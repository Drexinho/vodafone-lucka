        padding: 50px 0;
    }
    
    .contact-item {
        flex-direction: column;
        text-align: center;
        padding: 1.5rem 1rem;
    }
    
    .contact-icon {
        margin-bottom: 0.5rem;
    }
    
    .contact-form {
        padding: 1.75rem 1.25rem;
    }
    
    .form-group input,
    .form-group textarea {
        padding: 12px 15px;
        font-size: 1rem;
    }
    
    .footer {
        padding: 2rem 0 1rem;
    }
    
    .footer-content {
        gap: 1.5rem;
    }
}

/* Extra Small Phones (up to 480px) */
@media (max-width: 480px) {
    .container {
        padding: 0 12px;
    }
    
    .nav-container {
        padding: 0.5rem 12px;
    }
    
    .logo-text {
        font-size: 1.2rem;
    }
    
    .logo-subtitle {
        font-size: 0.7rem;
    }
    
    .nav-menu {
        gap: 0.2rem;
    }
    
    .nav-link {
        font-size: 0.8rem;
        padding: 0.35rem 0.5rem;
    }
    
    .hero {
        padding: 100px 0 40px;
    }
    
    .hero-title {
        font-size: 1.9rem;
        line-height: 1.2;
    }
    
    .hero-subtitle {
        font-size: 0.95rem;
    }
    
    .profile-img {
        max-width: 250px;
        height: 250px;
    }
    
    .section-header h2 {
        font-size: 1.75rem;
    }
    
    .section-header p {
        font-size: 0.95rem;
    }
    
    .about-text h3 {
        font-size: 1.3rem;
    }
    
    .service-card h3 {
        font-size: 1.25rem;
    }
    
    .reference-content h3 {
        font-size: 1.15rem;
    }
    
    .contact-details h4 {
        font-size: 1rem;
    }
    
    .quick-btn {
        padding: 10px 16px;
        font-size: 0.9rem;
    }
}

/* Landscape Orientation for Small Screens */
@media (max-width: 768px) and (orientation: landscape) {
    .hero {
        min-height: auto;
        padding: 120px 0 50px;
    }
    
    .hero-container {
        gap: 1.5rem;
    }
    
    .profile-img {
        max-width: 300px;
        height: 300px;
    }
}

/* Print Styles */
@media print {
    .navbar,
    .footer,
    .hero-cta,
    .quick-actions,
    .contact-form {
        display: none;
    }
    
    .hero {
        padding: 20px 0;
    }
    
    body {
        color: #000;
        background: #fff;
    }
}
