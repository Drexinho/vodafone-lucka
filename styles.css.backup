    }
    
    .logo-subtitle {
        font-size: 0.85rem;
    }
    
    .nav-menu {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: center;
        gap: 0.5rem;
        width: 100%;
        margin-top: 0.5rem;
    }
    
    .nav-link {
        font-size: 0.95rem;
        padding: 0.5rem 0.75rem;
    }
    
    .hero {
        padding: 140px 0 60px;
        min-height: auto;
    }
    
    .hero-container {
        grid-template-columns: 1fr;
        text-align: center;
        gap: 2rem;
    }
    
    .hero-title {
        font-size: 3rem;
    }
    
    .hero-subtitle {
        font-size: 1.1rem;
    }
    
    .hero-cta {
        justify-content: center;
    }
    
    .profile-img {
        max-width: 350px;
        height: 350px;
    }
    
    .section-header h2 {
        font-size: 2.5rem;
    }
    
    .section-header p {
        font-size: 1.1rem;
    }
    
    .about {
        padding: 60px 0;
    }
    
    .about-stats {
        flex-direction: row;
        justify-content: space-around;
    }
    
    .stat-item {
        padding: 1.5rem 1rem;
        flex: 1;
        min-width: 150px;
    }
    
    .stat-number {
        font-size: 2rem;
    }
    
    .services {
        padding: 60px 0;
    }
    
    .services-grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }
    
    .service-card {
        padding: 2rem 1.5rem;
    }
    
    .references {
        padding: 60px 0;
    }
    
    .references-grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }
    
    .contact {
        padding: 60px 0;
    }
    
