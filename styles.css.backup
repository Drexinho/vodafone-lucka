    .contact-form {
        padding: 2rem 1.5rem;
    }
    
    .quick-actions {
        flex-direction: column;
    }
    
    .quick-btn {
        width: 100%;
    }
    
    .footer-content {
        grid-template-columns: 1fr;
        text-align: center;
        gap: 2rem;
    }
    
    .footer-social {
        justify-content: center;
    }
}

